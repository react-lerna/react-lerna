{
  "name": "react-lerna",
  "version": "0.1.0",
  "scripts": {
    "test": "lerna run test --stream --no-bail",
    "nuke": "lerna clean -y && rm -rf node_modules && rm -rf packages/ui-components/dist",
    "dev:web": "cd apps/webapp && yarn dev",
    "test:web": "cd apps/webapp npm test",
    "build:web": "cd apps/webapp yarn build",
    "dev:ui": "cd packages/ui-components && npm start",
    "test:ui": "cd packages/ui-components yarn test",
    "build:ui": "lerna exec --scope @react-lerna/ui-components -- yarn build",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "lerna:changed": "lerna changed",
    "lerna:publish": "lerna publish",
    "lerna:ls": "lerna ls"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-loader": "^8.0.6",
    "babel-preset-minify": "^0.5.1",
    "husky": "^3.0.4",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-lerna/react-lerna.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  },
  "author": "JoÃ£o Belo <joaobelo.dev@gmail.com>",
  "license": "ISC",
  "homepage": "https://github.com/react-lerna/react-lerna#readme",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
